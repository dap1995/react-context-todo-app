{
  "name": "todo-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "prop-types": "^15.6.1",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-scripts": "1.1.4",
    "styled-components": "^3.3.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom --coverage",
    "flow": "flow",
    "eject": "react-scripts eject"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn test",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --single-quote --write",
      "eslint",
      "git add"
    ]
  },
  "devDependencies": {
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "flow-bin": "^0.73.0",
    "husky": "^1.0.0-rc.8",
    "lint-staged": "^7.1.2",
    "prettier": "^1.13.2"
  }
}
